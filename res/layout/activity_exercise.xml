<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExerciseActivity" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/exercise_instruction"/>
        
        <TextView
            android:id="@+id/text_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/exercise_instruction"/>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:gravity="center_vertical"/>

        <ToggleButton
            android:id="@+id/button_playquestion"
            style="@style/PlayerButtonPlayAnswer"
            android:textOff="question" />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/image_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ToggleButton
            android:id="@+id/button_record"
            style="@style/PlayerButtonRecord"
            android:contentDescription="@string/button_record" />
        <!-- android:background="@drawable/selector_button_record" -->

        <ToggleButton
            android:id="@+id/button_playback"
            style="@style/PlayerButtonPlayBack"
            android:contentDescription="@string/button_playback" />

        <!-- android:background="@drawable/selector_button_playback" -->

        <ToggleButton
            android:id="@+id/button_playanswer"
            style="@style/PlayerButtonPlayAnswer"
            android:contentDescription="@string/button_playanwser" />

        <!-- android:background="@drawable/selector_button_playback" -->

    </LinearLayout>

</LinearLayout>