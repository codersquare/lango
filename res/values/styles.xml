<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="fullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>        
    </style>
    
    <!-- Home page Icon theme. -->
    <style name="HomeIconText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">Arial</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <!-- Exercise Menu page list theme: LEVEL 1. -->
    <style name="ExerciseMenuTextLevel1" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">Arial</item>
        <item name="android:textSize">19sp</item>
        <item name="android:paddingLeft">30dp</item> 
        <item name="android:paddingBottom">8dp</item>  
        <item name="android:paddingTop">8dp</item>  
        <item name="android:textColor">#000000</item>
  <item name="android:background">#FFFFF0</item>   
    </style>

    <!-- Exercise Menu page list theme: LEVEL 2. -->
    <style name="ExerciseMenuTextLevel2" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">Calibri</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">65dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:textColor">#3B3B3B</item>
 
        <!--  <item name="android:background">#FFFFFF</item>   -->
    </style>
    

</resources>