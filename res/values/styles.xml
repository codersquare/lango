<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="fullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- Home page Icon theme. -->
    <style name="HomeIconText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">Arial</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>

    <!-- Exercise Menu page list theme: LEVEL 1. -->
    <style name="ExerciseMenuTextLevel1" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">Arial</item>
        <item name="android:textSize">19sp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:background">@color/bk_green</item>
    </style>

    <!-- Exercise Menu page list theme: LEVEL 2. -->
    <style name="ExerciseMenuTextLevel2" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">Calibri</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">65dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:textColor">@color/txt_gray</item>
    </style>

    <!-- Exercise Media player button theme v0 -->
    <style name="PlayerButtonRecord_v0">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textOn">stop</item>
        <item name="android:textOff">record</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="PlayerButtonPlayBack_v0">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textOn">stop</item>
        <item name="android:textOff">playback</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="PlayerButtonPlayAnswer_v0">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textOn">stop</item>
        <item name="android:textOff">answer</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PlayerButtonPlayQuestion_v0">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textOn">stop</item>
        <item name="android:textOff">question</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Exercise Media player button theme v1 -->
    <style name="PlayerButtonRecord_v1" parent="android:attr/borderlessButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textOn">R</item>
        <item name="android:textOff">R</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
        <style name="PlayerButtonPlayQuestion_v1" parent="android:attr/borderlessButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textOn">Q</item>
        <item name="android:textOff">Q</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
            <style name="PlayerButtonPlayAnswer_v1" parent="android:attr/borderlessButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textOn">A</item>
        <item name="android:textOff">A</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
            <style name="PlayerButtonPlayBack_v1" parent="android:attr/borderlessButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textOn">PB</item>
        <item name="android:textOff">PB</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    
    <!-- Exercise text theme -->
    <style name="ExerciseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Exercise layout box theme -->
    <style name="ExerciseBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@color/bk_green</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>